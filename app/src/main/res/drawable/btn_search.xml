<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorBackgroundDark"
                />
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="5dp"
                android:top="3dp"
                android:right="5dp"
                android:bottom="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/colorBackground"
                />
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="5dp"
                android:top="3dp"
                android:right="5dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>